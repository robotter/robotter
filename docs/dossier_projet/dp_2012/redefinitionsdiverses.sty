%% BOITE AVEC UN TITRE EN HAUT-GAUCHE
\newcommand{\titlebox}[2]{%
\tikzstyle{titlebox}=[rectangle,inner sep=20pt,inner ysep=20pt,line
width=1pt,draw=titleboxcolor]%
\tikzstyle{title}=[fill=white,text=titleboxcolor,right]%
%
\bigskip\noindent\begin{tikzpicture}
\node[titlebox] (box){%
\renewcommand{\labelitemi}{\textbullet}
\begin{minipage}{0.8\textwidth}
\color{black}
#2
\end{minipage}
};
%\draw[color=blue] (box.north west)--(box.north east);
\node[yshift=3ex,xshift=-.1\textwidth,title] at (box.north west)
{\large{\textsc{#1}}};
\end{tikzpicture}\bigskip%
} 


